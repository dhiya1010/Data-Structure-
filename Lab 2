#include<bits/stdc++.h>
using namespace std;
int main(){
    string a;
    cout<<"Enter the word :"<<endl;
    cin>>a;
    transform(a.begin(), a.end(), a.begin(), ::toupper);
    cout<<a<<endl;
    bool isPalindrome = true;
    int n = a.length();

    for (int i = 0; i < n / 2; i++) {
        if (a[i] != a[n - i - 1]) {
            isPalindrome = false;
            break;
        }
    }

    if (isPalindrome) {
        cout << "The word is a PALINDROME." << endl;
    } else {
        cout << "The word is NOT a palindrome." << endl;
    }

    return 0;

}
